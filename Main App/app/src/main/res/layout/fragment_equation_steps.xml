<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/steps"
    tools:context="com.example.vellaj48.myapplication.equationSteps">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="500dp"
        android:layout_height="75dp"
        android:text="Back to Calculator"
        android:id="@+id/button43"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="showButtons" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Steps"
        android:id="@+id/button"
        android:layout_above="@+id/button43"
        android:layout_centerHorizontal="true"
        android:onClick="showEquationSteps" />


</RelativeLayout>
