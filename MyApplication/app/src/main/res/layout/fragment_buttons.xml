    android:id="@+id/buttons"
    tools:context="com.example.vellaj48.myapplication.ButtonsFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:onClick="addOperators" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3"
        android:onClick="addOperators" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:layout_marginTop="47dp"
        android:background="#A77777"
        android:onClick="addNumbers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button6"
        android:layout_below="@+id/button10"
        android:layout_centerHorizontal="true"
        android:background="#A77777"
        android:onClick="addNumbers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/button7"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/button6"
        android:layout_toRightOf="@+id/button12"
        android:layout_toStartOf="@+id/button8"
        android:onClick="evaluate" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="intDiv"
    android:id="@+id/button4"
    android:layout_below="@+id/button7"
    android:layout_alignLeft="@+id/button2"
    android:layout_alignStart="@+id/button2"
    android:layout_alignRight="@+id/button11"
    android:layout_alignEnd="@+id/button11"
    android:onClick="intEval"
    android:visibility="invisible"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Saved Variable"
        android:visibility="visible"
        android:onClick="addVariables"
        android:id="@+id/useSaved"
        android:layout_alignTop="@+id/button4"
        android:layout_toLeftOf="@+id/button28"
        android:layout_toStartOf="@+id/button28" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button9"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:background="#A77777"
        android:onClick="addNumbers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button10"
        android:layout_below="@+id/button9"
        android:layout_centerHorizontal="true"
        android:background="#A77777"
        android:onClick="addNumbers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/button11"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:onClick="addOperators" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="("
        android:id="@+id/button12"
        android:layout_above="@+id/button3"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:onClick="addParentheses" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Negate"
        android:id="@+id/button5"
        android:onClick="makeNegative"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLear"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="clearExpression" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=")"
        android:id="@+id/button13"
        android:layout_above="@+id/button3"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:onClick="addParentheses" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/button14"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button12"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:onClick="addOperators" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/button15"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button13"
        android:layout_toRightOf="@+id/button11"
        android:layout_toEndOf="@+id/button11"
        android:onClick="addOperators" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button16"
        android:layout_alignTop="@+id/button3"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:onClick="addNumbers"
        android:background="#A77777" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button17"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button16"
        android:layout_alignStart="@+id/button16"
        android:background="#A77777"
        android:onClick="addNumbers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button18"
