        android:layout_alignLeft="@+id/button17"
        android:layout_alignStart="@+id/button17"
        android:background="#A77777"
        android:onClick="addNumbers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="backspace"
        android:id="@+id/button19"
        android:layout_below="@+id/button18"
        android:layout_alignLeft="@+id/button18"
        android:layout_alignStart="@+id/button18"
        android:onClick="backSpace" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button20"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_above="@+id/button9"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:background="#A77777"
        android:onClick="addNumbers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button21"
        android:layout_above="@+id/button10"
        android:layout_alignLeft="@+id/button20"
        android:layout_alignStart="@+id/button20"
        android:background="#A77777"
        android:onClick="addNumbers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button22"
        android:layout_above="@+id/button6"
        android:layout_alignLeft="@+id/button21"
        android:layout_alignStart="@+id/button21"
        android:background="#A77777"
        android:onClick="addNumbers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/button23"
        android:layout_above="@+id/button7"
        android:layout_alignLeft="@+id/button22"
        android:layout_alignStart="@+id/button22"
        android:onClick="addDecimal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Variable"
        android:id="@+id/button29"
        android:onClick="createVariablesFragment"
        android:layout_above="@+id/button8"
        android:layout_alignLeft="@+id/button23"
        android:layout_alignStart="@+id/button23" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:id="@+id/button27"
        android:onClick="logout"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignLeft="@+id/button19"
        android:layout_alignStart="@+id/button19"
        android:layout_toStartOf="@+id/button6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Equations"
        android:id="@+id/button28"
        android:layout_below="@+id/button7"
        android:layout_centerHorizontal="true"
        android:onClick="saveEquations" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Equation 1 Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText10"
        android:layout_alignParentBottom="true"
